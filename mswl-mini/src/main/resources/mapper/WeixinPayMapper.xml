<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frank.mswl.mini.weixin.WeixinPayRepository">

    <!--
         微信支付Mapper.
         @author 张孝党 2020/01/04.
         @version V0.0.1.
         <p>
         更新履历： V0.0.1 2020/01/04 张孝党 创建.
     -->

    <!-- 更新订单流水 -->
    <update id="updOrderByOrderId" parameterType="Map">
        UPDATE
            g_order
        <trim prefix="set" suffixOverrides=",">
            <if test="tradeno != null and tradeno != ''">tradeno = #{tradeno},</if>
            <if test="couponid != null and couponid != ''">couponid = #{couponid},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </trim>
        WHERE
            orderid = #{orderid}
    </update>

    <!-- 新增支付流水 -->
    <insert id="insJyLs" parameterType="Map">
        INSERT INTO
            g_jy_ls (
                 id
                ,tradeno
                ,transactionid
                ,tradetype
                ,banktype
                ,feetype
                ,openid
                ,timeend
                ,totalfee
            )
        VALUES (
                 #{id}
                ,#{tradeno}
                ,#{transactionid}
                ,#{tradetype}
                ,#{banktype}
                ,#{feetype}
                ,#{openid}
                ,#{timeend}
                ,#{totalfee}
        )
    </insert>

    <!-- 更新订单流水 -->
    <update id="updOrderByTradeNo" parameterType="Map">
        UPDATE
            g_order
        SET
            status = #{status}
        WHERE
            tradeno = #{tradeno}
    </update>

    <!-- 根据商户订单号获取优惠券ID -->
    <select id="getCouponByTradeNo" parameterType="Map" resultType="Map">
        SELECT
            distinct(couponid) as couponid
        FROM
            g_order
        WHERE
            tradeno = #{tradeno}
    </select>

    <!-- 根据优惠券ID更新状态 -->
    <update id="updCouponStatus" parameterType="Map">
        UPDATE
            g_coupon_his
        SET
             couponstatus = #{couponstatus}
            ,usetime = #{usetime}
        WHERE
            id = #{couponid}
    </update>

    <!-- 增加个人积分 -->
    <insert id="insMarkHis" parameterType="Map">
        INSERT INTO
            g_mark_his (
                  id
                 ,openid
                 ,tradeno
                 ,fee
                 ,entry
                 ,mark
                 ,updtime
            )
        VALUES (
                 #{id}
                ,#{openid}
                ,#{tradeno}
                ,#{fee}
                ,#{entry}
                ,#{mark}
                ,#{updtime}
        )
    </insert>

    <!-- 查询个人消费记录 -->
    <select id="queryConsumeListByOpenId" parameterType="Map" resultType="Map">
        SELECT
             a.id
            ,a.tradeno
            ,a.transactionid
            ,a.timeend
            ,CONVERT(a.totalfee/100, decimal(7, 2)) AS totalfee
            ,CASE
                WHEN b.checktype = '2' THEN '语法检测费用'
                ELSE '查重费用'
             END AS feename
        FROM
            g_jy_ls a
        LEFT JOIN (
            SELECT DISTINCT(tradeno), checktype
            FROM g_order
            WHERE
                 openid = #{openid}
             AND status in ('2','3')
        ) b ON a.tradeno = b.tradeno
        WHERE
            a.openid = #{openid}
        ORDER BY a.timeend DESC
        <if test="pagingOrNot != null and pagingOrNot != ''">
            LIMIT #{startindex}, #{pagesize};
        </if>
    </select>
    
    <!-- 根据支付商户订单号查询订单信息 -->
    <select id="getOrderInfoByTradeno" parameterType="Map" resultType="Map">
    	SELECT
    	     checktype
    	    ,firstname
    	    ,lastname
    	    ,titile
    	    ,originalurl
    	    ,tradeno
    	    ,orderid
    	    ,ext
    	FROM
    	    g_order
    	WHERE
    	    tradeno = #{tradeno}
    </select>

    <!-- 根据订单号查询订单信息 -->
    <select id="getOrderInfoByOrderId" parameterType="Map" resultType="Map">
    	SELECT
    	     checktype
    	    ,firstname
    	    ,lastname
    	    ,titile
    	    ,originalurl
    	    ,tradeno
    	    ,orderid
    	    ,ext
    	FROM
    	    g_order
    	WHERE
    	    orderid = #{orderid}
    </select>
    
    <!-- 据支付商户订单号更新论文ID -->
    <update id="updThesisIdByOrderId" parameterType="Map">
        UPDATE
            g_order
        SET
            thesisid = #{thesisid}
        WHERE
            orderid = #{orderid}
    </update>

    <insert id="insFailureOrder" parameterType="Map">
        INSERT INTO
            g_order_failure (
                 id
                ,orderid
                ,updtime
            )
        VALUES (
                 #{id}
                ,#{orderid}
                ,#{updtime}
        )
    </insert>

    <delete id="delFailureOrder" parameterType="Map">
        DELETE FROM
            g_order_failure
        WHERE
            orderid = #{orderid}
    </delete>
</mapper>